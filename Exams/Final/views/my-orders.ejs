<div class="min-h-[60vh] flex flex-col justify-center items-center py-12">
  <h1 class="text-2xl font-semibold mb-6">My Orders</h1>
  <ul class="w-full max-w-2xl">
    <% if (orders.length === 0) { %>
      <li class="text-gray-500 text-center py-8">No order history yet. Your orders will appear here once you make a purchase.</li>
    <% } else { %>
      <% orders.forEach(order => { %>
        <li class="mb-8 border rounded shadow p-6 bg-white">
          <div class="flex justify-between items-center mb-2">
            <div class="font-semibold">Order Date: <span class="font-normal"><%= order.createdAt.toLocaleString() %></span></div>
            <div class="text-sm px-3 py-1 rounded bg-gray-100 text-gray-700"><%= order.status %></div>
          </div>
          <div class="mb-2 text-gray-700">Total: <span class="font-bold">£<%= order.total.toLocaleString() %></span></div>
          <ul class="divide-y divide-gray-200">
            <% order.items.forEach(item => { %>
              <li class="flex items-center gap-4 py-3">
                <img src="/images/<%= item.mainImage %>" alt="<%= item.name %>" class="w-12 h-16 object-cover rounded border">
                <div class="flex-1">
                  <div class="font-semibold"><%= item.name %></div>
                  <div class="text-xs text-gray-500">Size: <%= item.size %></div>
                  <div class="text-xs text-gray-500">Qty: <%= item.quantity %></div>
                </div>
                <div class="font-bold">£<%= (item.price * item.quantity).toLocaleString() %></div>
              </li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    <% } %>
  </ul>
</div> 