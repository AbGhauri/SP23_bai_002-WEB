<%- contentFor('body') %>

<!-- Hero Image Section -->
<div class="relative min-h-screen w-full bg-hero-placeholder text-white">
    <img src="/images/hero.png" alt="Hero Image" class="absolute inset-0 w-full h-full object-cover z-0" />
    <main class="relative z-10 flex flex-col items-center justify-end text-center min-h-screen w-full pb-32"
          style="padding-top: 96px;">
        <h1 class="font-serif-custom text-3xl md:text-5xl font-normal mb-3">Summer Sale</h1>
        <p class="text-sm md:text-base max-w-lg mx-auto mb-6 px-4">
            Explore our summer sale of designer women's ready to wear and eveningwear, now with up to 50% off. Exclusively available at Temperley London.
        </p>
        <button class="border border-white/50 px-5 py-1.5 text-xs uppercase tracking-wider hover:bg-white hover:text-black transition-colors duration-300">
            Shop Sale
        </button>
    </main>
</div>

<!-- Product Slider Section: New Arrivals -->
<div class="container py-5">
    <h2 class="section-title text-center mb-5 text-2xl font-semibold">NEW ARRIVALS</h2>
    <a href="https://int.temperleylondon.com/collections/spring-summer-25" class="block text-center text-sm uppercase tracking-wider text-gray-700 hover:text-black mb-6">View All</a>
    <div class="relative mx-auto max-w-7xl px-4">
        <!-- Slider Navigation Buttons -->
        <button class="slider-btn-back absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-white p-2 rounded-full shadow-md hidden">
            <img src="/images/b_arrow.svg" alt="Previous" class="w-6 h-6">
        </button>
        <button class="slider-btn-next absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white p-2 rounded-full shadow-md">
            <img src="/images/prer_arrow.svg" alt="Next" class="w-6 h-6">
        </button>
        <div class="product-slider flex flex-nowrap overflow-x-scroll gap-x-4 pb-4" style="scroll-behavior: smooth;">
            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                <% products.forEach(function(product, idx) { %>
                    <%- include('partials/product-card', { product: product, id: idx }) %>
                <% }); %>
            <% } else { %>
                <!-- Fallback content if no products are available -->
                <div class="text-center w-full py-8">
                    <p class="text-gray-500">No products available at the moment.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- The Shire Hero Section -->
<section style="display: flex; align-items: center; justify-content: center; min-height: 100vh; background: #f8f0e8;">
    <div class="shire-hero-grid">
        <!-- Title: A TIMELESS LEGACY -->
        <div style="grid-column: 1 / span 3; text-align:center; font-size:1.3rem; letter-spacing:0.05em; margin-bottom:2rem; font-family: 'Cormorant Garamond', serif;">
            A TIMELESS LEGACY
        </div>
        <!-- Left Text Content -->
        <div style="padding-right: 2rem;">
            <p style="font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 0.5rem; font-family: sans-serif;">Somerset</p>
            <h1 style="font-size: 5rem; line-height: 0.8; font-weight: 700; font-family: Georgia, serif; margin-bottom: 1.5rem;">THE<br>SHIRE</h1>
            <p style="font-size: 1.1rem; margin-bottom: 1rem;">
                Temperley London captures the soul of the English countryside, infused with a free bohemian spirit.
            </p>
            <p style="font-size: 1.1rem;">
                Devoted to authenticity, storytelling, craftsmanship, and responsibility, we create with purpose, honouring tradition while embracing the future.
            </p>
        </div>
        <!-- Center Image -->
        <div>
            <img src="/images/about.png" alt="Black and white photo of a woman on a rearing white horse" style="width: 100%; height: auto; max-height: 600px; object-fit: cover; border-radius: 8px;">
        </div>
        <!-- Right: About Us Link -->
        <div style="display: flex; align-items: center; justify-content: flex-start; height: 100%;">
            <a href="https://int.temperleylondon.com/pages/about-us" style="font-size: 1rem; letter-spacing: 0.1em; text-transform: uppercase; text-decoration: underline; font-family: sans-serif; color: #222;">About Us</a>
        </div>
    </div>
</section>

<!-- Newsletter Signup Section -->
<section class="flex flex-col md:flex-row min-h-[400px] bg-[#FDF8F1] w-full py-12">
    <!-- Left: Text Content -->
    <div class="w-full md:w-1/2 p-8 md:p-16 flex flex-col justify-center">
        <h2 class="font-serif-custom text-4xl md:text-5xl font-normal mb-4 flex items-center">
            Join the Tribe
            <span class="ml-4 block w-12 h-px bg-gray-800"></span>
        </h2>
        <p class="text-lg md:text-xl leading-relaxed mb-8 max-w-lg">
            A world so seductive, so magical, you can't help wanting to be part of its sepia toned wonderfulness the moment you enter it.
            <br>
            <span class="mt-2 block font-normal">â€“ VOGUE</span>
        </p>
        <div class="mt-8">
            <h3 class="text-lg font-semibold mb-2">Newsletter</h3>
            <p class="text-sm mb-6 max-w-sm">
                Sign up for our newsletter and enjoy collection previews, new arrivals, events and other exclusive offers.
            </p>
            <form class="flex items-center border-b border-gray-400 pb-1 max-w-sm">
                <input type="email" placeholder="Enter your email address*" class="bg-transparent w-full focus:outline-none text-gray-800 placeholder-gray-500 text-sm py-1" required>
                <button type="submit" class="ml-4 flex items-center text-sm font-semibold text-gray-800 hover:text-black">
                    SIGN UP
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </button>
            </form>
        </div>
    </div>
    <!-- Right: Image -->
    <div class="w-full md:w-1/2 min-h-[300px] md:min-h-[400px] flex items-center justify-center">
        <img src="/images/newsletter.png" alt="Newsletter" class="w-full h-full object-cover rounded-lg shadow-md">
    </div>
</section>

<% if (typeof success !== 'undefined' && success) { %>
  <div id="success-popup" class="fixed top-5 right-5 bg-green-500 text-white px-6 py-3 rounded shadow-lg z-50">
    <%= success %>
  </div>
  <script>
    setTimeout(() => {
      document.getElementById('success-popup').style.display = 'none';
    }, 2500); // Hide after 2.5 seconds
  </script>
<% } %>

<% if (typeof openCart !== 'undefined' && openCart) { %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const cartSidebar = document.getElementById('cart-sidebar');
      const cartBackdrop = document.getElementById('cart-sidebar-backdrop');
      if (cartSidebar && cartBackdrop) {
        cartSidebar.classList.remove('translate-x-full');
        cartSidebar.classList.add('translate-x-0');
        cartBackdrop.classList.remove('hidden');
      }
    });
  </script>
<% } %> 