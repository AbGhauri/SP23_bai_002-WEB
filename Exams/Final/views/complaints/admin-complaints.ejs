<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel - Complaints</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('../admin/_admin-nav') %>
  <main class="max-w-5xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-6">User Complaints</h1>
    <table class="w-full bg-white rounded shadow">
      <thead>
        <tr class="bg-gray-200">
          <th class="p-2">User</th>
          <th class="p-2">Subject</th>
          <th class="p-2">Message</th>
          <th class="p-2">Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% complaints.forEach(function(complaint) { %>
          <tr>
            <td class="p-2"><%= complaint.userId ? complaint.userId.email : '' %></td>
            <td class="p-2"><%= complaint.subject %></td>
            <td class="p-2"><%= complaint.message %></td>
            <td class="p-2"><%= complaint.timestamp.toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html> 