<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-xl w-full space-y-8 bg-transparent p-8 rounded">
    <h1 class="text-4xl font-serif font-semibold mb-8 text-gray-900">Contact Us</h1>
    <form action="/complaints" method="POST" class="space-y-6">
      <div>
        <label for="subject" class="sr-only">Enquiry subject</label>
        <select name="subject" id="subject" required
          class="appearance-none w-full px-0 py-3 border-0 border-b border-gray-400 bg-transparent text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-0 focus:border-black">
          <option value="" disabled selected>Enquiry subject*</option>
          <option>Returns/Refunds</option>
          <option>Stock Availability</option>
          <option>Product Enquiry</option>
          <option>Order Enquiry</option>
          <option>Wholesale Request</option>
          <option>Press/Marketing Request</option>
          <option>General Enquiry</option>
          <option>Other</option>
        </select>
      </div>
      <div>
        <label for="message" class="sr-only">Message</label>
        <textarea name="message" id="message" rows="4" required placeholder="Message*"
          class="w-full px-0 py-3 border-0 border-b border-gray-400 bg-transparent text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-0 focus:border-black resize-none"></textarea>
      </div>
      <div class="pt-8">
        <button type="submit"
          class="w-full py-3 border border-black text-black font-semibold tracking-widest uppercase bg-white hover:bg-gray-100 transition">Submit Enquiry</button>
      </div>
    </form>
    <p class="text-xs text-gray-400 mt-4">*Required fields</p>
  </div>
</div> 