<div class="product-slider-card max-w-xs">
  <a href="/product/<%= typeof id !== 'undefined' ? id : '' %>" class="block h-full w-80">
    <div class="product-card group flex flex-col h-full">
      <div class="relative mb-4">
        <img src="/images/<%= product.mainImage %>" alt="<%= product.name %>" class="main-image transition duration-300 ease-in-out group-hover:hidden block w-full h-96 object-cover rounded">
        <img src="/images/<%= product.hoverImage %>" alt="<%= product.name %> Hover" class="hover-image transition duration-300 ease-in-out group-hover:block hidden w-full h-96 object-cover rounded absolute top-0 left-0">
        <!-- Add to Cart (clip icon) overlay -->
        <form action="/cart/add" method="POST" class="absolute top-2 right-2 z-20 add-to-cart-form">
          <input type="hidden" name="id" value="<%= typeof id !== 'undefined' ? id : '' %>">
          <input type="hidden" name="openCart" value="1">
          <button type="submit" title="Add to Cart" class="p-2 hover:bg-gray-200 rounded-full focus:outline-none bg-white bg-opacity-80 shadow add-to-cart-btn">
            <img src="/images/asset 42.svg" alt="Add to Cart" class="w-5 h-5">
          </button>
        </form>
        <div class="size-bar flex absolute bottom-0 left-0 right-0 w-full bg-white bg-opacity-90 py-1 px-2 justify-center gap-2 z-10">
          <% product.sizes.forEach(function(size) { %>
            <span class="size-option"><%= size %></span>
          <% }); %>
        </div>
      </div>
      <div class="flex-1 flex flex-col justify-between">
        <div class="flex justify-between items-center mb-1">
          <h3 class="font-serif-custom text-lg font-semibold mb-0"><%= product.name %></h3>
          <p class="product-price font-semibold text-base mb-0">Â£<%= product.price %></p>
        </div>
        <div class="color-bar flex gap-2 justify-center mt-1 mb-2">
          <% product.colors.forEach(function(color) { %>
            <span class="color-option" style="background-color: <%= (typeof color === 'string' && color.trim()) ? color.toLowerCase() : '#eee' %>;"></span>
          <% }); %>
        </div>
      </div>
    </div>
  </a>
</div> 