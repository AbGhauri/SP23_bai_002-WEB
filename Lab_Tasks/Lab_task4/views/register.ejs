<div class="flex h-screen">
    <!-- Left: Image (fixed/sticky) -->
    <div class="hidden md:block w-1/2 h-screen sticky top-0">
        <img src="/images/register.png" alt="Register" class="object-cover w-full h-full" />
    </div>
    <!-- Right: Registration Form (scrollable) -->
    <div class="w-full md:w-1/2 h-screen overflow-y-auto flex justify-center p-8 bg-white">
        <div class="w-full max-w-lg">
            <h1 class="font-serif-custom text-4xl mb-6 text-gray-800 text-center">Create Account</h1>
            <p class="text-sm text-gray-700 mb-4 text-center">Create a Temperley London account and take advantage of these benefits:</p>
            <ul class="list-disc list-inside text-sm text-gray-700 mb-6">
                <li>A faster checkout experience</li>
                <li>Track your orders & order history</li>
                <li>Create & share multiple wishlist boards</li>
                <li>Receive 10% off when signed up to email & SMS</li>
            </ul>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="mb-4 text-red-600 text-sm"><%= error %></div>
            <% } %>
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="mb-4 text-green-600 text-sm"><%= success %></div>
            <% } %>
            <form action="/register" method="POST">
                <div class="flex gap-4 mb-4">
                    <div class="w-1/2">
                        <label class="block text-sm text-gray-700 mb-1">First name*</label>
                        <input type="text" name="name" required class="w-full border-0 border-b border-gray-300 focus:border-black focus:ring-0 bg-transparent px-0 py-2 text-base">
                    </div>
                    <div class="w-1/2">
                        <label class="block text-sm text-gray-700 mb-1">Last name*</label>
                        <input type="text" name="lastname" required class="w-full border-0 border-b border-gray-300 focus:border-black focus:ring-0 bg-transparent px-0 py-2 text-base">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-sm text-gray-700 mb-1">Email address*</label>
                    <input type="email" name="email" required class="w-full border-0 border-b border-gray-300 focus:border-black focus:ring-0 bg-transparent px-0 py-2 text-base">
                </div>
                <div class="mb-4">
                    <label class="block text-sm text-gray-700 mb-1">Password*</label>
                    <input type="password" name="password" required class="w-full border-0 border-b border-gray-300 focus:border-black focus:ring-0 bg-transparent px-0 py-2 text-base">
                </div>
                <button class="w-full border border-gray-800 px-4 py-2 text-sm tracking-wider bg-white hover:bg-gray-100 text-gray-800 transition duration-200 uppercase" type="submit">Sign Up</button>
                <div class="mt-4 text-center text-sm">
                    Already have an account? <a href="/login" class="underline hover:text-gray-900">Login here</a>
                </div>
            </form>
        </div>
    </div>
</div> 